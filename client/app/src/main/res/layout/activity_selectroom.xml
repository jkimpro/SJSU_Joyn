<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- 최상단 레이아웃 총높이 : 2880-->
    <LinearLayout
        android:layout_width="1440px"
        android:layout_height="225px">

        <ImageButton
            android:id="@+id/my_status"
            android:layout_marginLeft="1215px"
            android:layout_width="225px"
            android:layout_height="225px"
            />
    </LinearLayout>

    <!--중간 레이아웃-->
    <LinearLayout

        android:layout_width="1440px"
        android:layout_height="2200px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1440px"
            android:layout_height="402px"
            android:layout_marginTop="95px">


            <ImageButton
                android:id="@+id/joinCloseBt"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="1120px"
                android:layout_marginTop="150px"
                android:background="@drawable/button_bg_round"
                android:padding="15px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500px">

            <ImageButton
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="75px"
                android:layout_marginTop="175px"
                android:background="@drawable/button_bg_round"
                android:padding="15px" />

            <ImageButton
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="1088px"
                android:layout_marginTop="175px"
                android:background="@drawable/button_bg_round"
                android:padding="15px"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="378px"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_marginTop="33px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="230px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="162px"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/friendImage1"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="10px"
                        android:background="@drawable/button_bg_round"
                        android:padding="15px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="230px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="61px"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/friendImage2"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="10px"
                        android:background="@drawable/button_bg_round"
                        android:padding="15px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="230px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="61px"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/friendImage3"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="10px"
                        android:background="@drawable/button_bg_round"
                        android:padding="15px" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="250px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="61px"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/friendImageElse1"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="10px"
                        android:background="@drawable/button_bg_round"
                        android:padding="15px" />

                    <ImageView
                        android:id="@+id/friendImageElse2"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_marginTop="10px"
                        android:background="@drawable/button_bg_round"
                        android:padding="15px" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/joinBt"
        android:layout_width="900px"
        android:layout_height="170px"
        android:layout_marginLeft="270px"
        android:layout_marginTop="2270px"
        android:background="#00000000"/>

    <!--하단 레이아웃-->
    <ImageButton
        android:id="@+id/home"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_marginLeft="140px"
        android:layout_marginTop="2630px"
        android:background="@drawable/button_bg_round" />

        <ImageButton
            android:id="@+id/addCircle"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginLeft="655px"
            android:layout_marginTop="2630px"
            android:background="@drawable/button_bg_round" />

        <ImageButton
            android:id="@+id/assignment"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginLeft="1160px"
            android:layout_marginTop="2630px"
            android:background="@drawable/button_bg_round" />

</RelativeLayout>

