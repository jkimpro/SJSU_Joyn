<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/select_sports4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240px">

        <Button
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="@drawable/ic_keyboard_arrow_up_black_24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/tennisBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/basketballBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/soccerBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/workoutBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/badmintonBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/joggingBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/yogaBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/cyclingBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/baseballBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/billiardsBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50px"
                    android:layout_height="10px">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/surfingBt"
                        android:layout_width="410px"
                        android:layout_height="410px"
                        android:background="#00000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <Button
            android:id="@+id/okBt"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="#00000000"/>
    </LinearLayout>

</RelativeLayout>
